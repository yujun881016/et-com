<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/menu_bg"
    >
    <TextView
        android:id="@+id/tv_userName"
        style="@style/menu_seyle"
        android:drawableLeft="@mipmap/username"
        android:drawablePadding="@dimen/dip_12"
        app:layout_marginTopPercent="6%h"
        app:layout_marginLeftPercent="10%w"
        app:layout_textSizePercent="8%w"
        android:text="用户名"
        />
    <TextView
        android:id="@+id/tv_address"
        style="@style/menu_seyle"
        android:layout_below="@+id/tv_userName"
        android:drawableLeft="@mipmap/position"
        app:layout_widthPercent="50%w"
        app:layout_marginTopPercent="5%h"
        app:layout_marginLeftPercent="10%w"
        app:layout_textSizePercent="6%w"
        android:text="北京"
        />
    <View
        android:id="@+id/v_addressLine"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_below="@+id/tv_address"
        android:layout_alignLeft="@+id/tv_address"
        android:layout_alignRight="@+id/tv_address"
        android:layout_marginTop="4dp"
        app:layout_widthPercent="50%w"
        />
    <ImageView
        android:id="@+id/iv_inpu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_address"
        android:layout_alignBottom="@id/tv_address"
        app:layout_widthPercent="2.8%h"
        android:src="@mipmap/inpu"/>

    <TextView
        android:id="@+id/tv_search"
        style="@style/menu_seyle"
        android:layout_below="@+id/v_addressLine"
        android:drawableLeft="@mipmap/search"
        android:layout_alignLeft="@+id/tv_address"
        android:drawablePadding="@dimen/dip_12"
        app:layout_textSizePercent="6%w"
        app:layout_marginTopPercent="10%h"
        android:text="搜索"
        />
    <TextView
        android:id="@+id/tv_share"
        style="@style/menu_seyle"
        android:layout_below="@+id/tv_search"
        android:drawableLeft="@mipmap/share"
        android:layout_alignLeft="@+id/tv_search"
        android:drawablePadding="@dimen/dip_12"
        app:layout_textSizePercent="6%w"
        app:layout_marginTopPercent="5%h"
        android:text="搜索"
        />
    <TextView
        android:id="@+id/tv_about"
        style="@style/menu_seyle"
        android:layout_below="@+id/tv_share"
        android:drawableLeft="@mipmap/about"
        android:layout_alignLeft="@+id/tv_share"
        android:drawablePadding="@dimen/dip_12"
        app:layout_textSizePercent="6%w"
        app:layout_marginTopPercent="5%h"
        android:text="关于我们"
        />
    <TextView
        android:id="@+id/tv_seting"
        style="@style/menu_seyle"
        android:drawableLeft="@mipmap/set"
        android:layout_alignLeft="@+id/tv_share"
        android:drawablePadding="@dimen/dip_12"
        android:layout_alignParentBottom="true"
        app:layout_textSizePercent="6%w"
        app:layout_marginBottomPercent="5%h"
        android:text="设置"
        />

</com.zhy.android.percent.support.PercentRelativeLayout>